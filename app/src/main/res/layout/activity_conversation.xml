<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ConversationActivity">

    <LinearLayout
        android:id="@+id/receiverUserDisplay"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_12sdp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/receivedUserImage"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            app:riv_corner_radius="@dimen/_12sdp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_marginStart="@dimen/_12sdp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/receivedUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mockUpName"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/receivedUserAge"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mockUpAge"
                android:textSize="@dimen/_18sdp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:padding="@dimen/_8sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:id="@+id/messageDisplay"
        android:orientation="vertical"
        app:stackFromEnd="true"
        android:layout_below="@+id/receiverUserDisplay"
        android:overScrollMode="never"
        android:clipToPadding="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/messageChatBox"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp" />

        <ImageView
            android:id="@+id/sendBtn"
            android:padding="@dimen/_2sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/message_icon" />
    </LinearLayout>

</RelativeLayout>