<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_width="@dimen/_30sdp"
            android:src="@drawable/back_icon"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_30sdp" />
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/profileDisplay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/mainDisplay"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp">

        <LinearLayout
            android:id="@+id/receiverUserDisplay"
            android:paddingHorizontal="@dimen/_20sdp"
            android:paddingVertical="@dimen/_12sdp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/receivedUserImage"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                app:riv_corner_radius="@dimen/_12sdp"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_marginStart="@dimen/_12sdp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/receivedUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mockUpName"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:id="@+id/receivedUserAge"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mockUpAge"
                    android:textSize="@dimen/_18sdp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/viewMoreIcon"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:cardCornerRadius="@dimen/_30sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/next_icon" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:padding="@dimen/_8sdp"
            android:layout_weight="1"
            android:background="@color/white"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/messageDisplay"
            android:orientation="vertical"
            app:stackFromEnd="true"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/messageChatBox"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp" />

            <ImageView
                android:id="@+id/sendBtn"
                android:padding="@dimen/_2sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/message_icon" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>