<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".Activity.AddInterestActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/titleCtn"
        android:layout_marginTop="@dimen/_20sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_interest_title"
            android:textColor="@color/purple_500"
            android:id="@+id/addInterestTitle"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_interest_ins"
            android:textColor="@color/purple_200"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:textStyle="normal"
            android:textAlignment="center" />
        <com.google.android.material.chip.ChipGroup
            app:chipSpacingVertical="@dimen/_4sdp"
            app:chipSpacingHorizontal="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:id="@+id/interestGroup"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@color/white"
            android:paddingHorizontal="4dp"
            android:textAlignment="center"
            android:id="@+id/choiceAnnounce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/choice_announce"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/purple_500" />
    </LinearLayout>
    <Button
        android:id="@+id/nextButtonId"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:layout_below="@+id/titleCtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_38sdp"
        android:layout_marginEnd="@dimen/_38sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/primary_button"
        android:text="@string/next_text" />
</RelativeLayout>