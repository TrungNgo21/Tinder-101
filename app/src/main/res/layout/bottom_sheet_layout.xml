<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <GridLayout
            android:columnCount="2"
            android:rowCount="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_500"
                android:id="@+id/cancel_button"
                android:padding="@dimen/_16sdp"
                android:textSize="@dimen/_14sdp"
                android:layout_columnWeight="1"
                android:text="Cancel"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/teal_700"
                android:textSize="@dimen/_14sdp"
                android:layout_columnWeight="1"
                android:textAlignment="viewEnd"
                android:id="@+id/done_button"
                android:padding="@dimen/_16sdp"
                android:text="Done"
                android:textStyle="bold" />
        </GridLayout>

        <TextView
            android:id="@+id/bottom_sheet_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/source_sans_pro_bold"
            android:layout_marginLeft="@dimen/_16sdp"
            android:textSize="@dimen/_16sdp"
            style="@style/PrimaryPurpleText"
            android:text="More about me" />

        <ScrollView
            android:layout_width="match_parent"
            android:paddingHorizontal="10dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="2"

                    android:columnCount="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:id="@+id/chip_group_title_1"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="What's your star sign ?"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        app:chipSpacingVertical="@dimen/_4sdp"
                        app:chipSpacingHorizontal="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:id="@+id/chip_group_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </GridLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="2"

                    android:columnCount="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:id="@+id/chip_group_title_2"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text="What's your star sign ?"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        app:chipSpacingVertical="@dimen/_4sdp"
                        app:chipSpacingHorizontal="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:id="@+id/chip_group_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </GridLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="2"

                    android:columnCount="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:id="@+id/chip_group_title_3"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text="What's your star sign ?"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        app:chipSpacingVertical="@dimen/_4sdp"
                        app:chipSpacingHorizontal="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:id="@+id/chip_group_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </GridLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="2"

                    android:columnCount="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:id="@+id/chip_group_title_4"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text="What's your star sign ?"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        app:chipSpacingVertical="@dimen/_4sdp"
                        app:chipSpacingHorizontal="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:id="@+id/chip_group_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </GridLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>