<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="@dimen/_24sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/info1"
            android:layout_width="408dp"
            android:layout_height="181dp"
            android:orientation="horizontal"
            app:alignItems="center"
            app:justifyContent="flex_start"
            tools:ignore="MissingConstraints">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/member_image"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:background="@drawable/full_border_transparent"

                android:scaleType="centerCrop"
                android:src="@drawable/girl_4"
                app:civ_border_color="@color/primary_purple_700"
                app:civ_border_width="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/my_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:text="Trung Bu"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textSize="@dimen/_18sdp" />

                    <TextView
                        android:id="@+id/my_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:text="21"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textSize="@dimen/_18sdp" />
                </LinearLayout>

                <Button
                    style="@style/PrimaryLightPurpleButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:text="Preview Your Profile"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

        </com.google.android.flexbox.FlexboxLayout>


        <TextView
            android:id="@+id/heading_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_bold"
            android:text="Photos"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@+id/info1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/subHeading_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:text="The main photo is how you appear to others on the swipe view."
            android:textSize="@dimen/_10sdp"
            tools:layout_editor_absoluteX="16dp"
            app:layout_constraintTop_toBottomOf="@+id/heading_photo"
            tools:ignore="MissingConstraints" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/photo_list_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/subHeading_photo"
            app:justifyContent="space_between"
            app:alignItems="center"
            android:layout_marginTop="@dimen/_16sdp"
            android:paddingLeft="@dimen/_14sdp"
            android:paddingRight="@dimen/_16sdp"
            app:flow_horizontalGap="@dimen/_32sdp"
            app:alignContent="center"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_315sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/girl_1"
                app:layout_flexShrink="4" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/girl_2"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/girl_3"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="@dimen/_8sdp" />

                <ImageView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/girl_4"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="@dimen/_8sdp" />
            </LinearLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <LinearLayout
            android:id="@+id/about_me_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/photo_list_container"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/heading_about_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_bold"
                android:text="About Me"
                android:textSize="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/info1"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp" />

            <TextView
                android:id="@+id/subheading_about_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/_16sdp"
                android:fontFamily="@font/source_sans_pro_regular"
                android:text="Make it easy for others to get a sense of who you are."
                android:textSize="@dimen/_10sdp"
                tools:layout_editor_absoluteX="16dp"
                app:layout_constraintTop_toBottomOf="@+id/heading_photo"
                tools:ignore="MissingConstraints" />

            <EditText
                android:layout_width="368dp"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@color/silver_mist_200"
                android:ems="10"
                android:fontFamily="@font/source_sans_pro_regular"
                android:gravity="left|top"
                android:hint="Share a few words about yourself, your interests, and what you're looking for in a connection..."
                android:inputType="textMultiLine"
                android:padding="@dimen/_16sdp"
                android:text="Life is really beautiful"
                android:textSize="@dimen/_10sdp">

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/interests_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/about_me_container"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/heading_interests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_bold"
                android:text="I'm interested with"
                android:textSize="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/info1"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp" />


            <com.google.android.material.chip.ChipGroup
                app:chipSpacingVertical="@dimen/_4sdp"
                app:chipSpacingHorizontal="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:id="@+id/chip_group_interest"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
<!--            <com.google.android.flexbox.FlexboxLayout-->
<!--                android:layout_width="match_parent"-->
<!--                app:justifyContent="space_between"-->
<!--                app:alignItems="center"-->
<!--                app:alignContent="center"-->
<!--                app:flexWrap="wrap"-->
<!--                android:layout_marginHorizontal="@dimen/_16sdp"-->
<!--                android:layout_height="wrap_content">-->
<!--                <androidx.recyclerview.widget.RecyclerView-->
<!--                    android:id="@+id/interestRecyclerView"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:layout_constraintTop_toBottomOf="@id/heading_interests"-->
<!--                    android:layout_marginLeft="@dimen/_16sdp"-->
<!--                    android:layout_marginTop="@dimen/_8sdp"-->
<!--                    android:layout_marginRight="@dimen/_16sdp"-->
<!--                    android:layout_marginBottom="@dimen/_8sdp"/>-->

<!--            </com.google.android.flexbox.FlexboxLayout>-->
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
