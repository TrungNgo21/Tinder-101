<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="@dimen/_24sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/info1"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:orientation="horizontal"
            android:padding="@dimen/_16sdp"
            app:alignItems="center"
            app:justifyContent="flex_start"
            tools:ignore="MissingConstraints">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/member_image"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:background="@drawable/full_border_transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/girl_4"
                app:civ_border_color="@color/primary_purple_700"
                app:civ_border_width="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/my_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:text="Trung Bu"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/my_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:text="21"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <Button
                    style="@style/PrimaryLightPurpleButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:text="Preview Your Profile"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

        </com.google.android.flexbox.FlexboxLayout>


        <TextView
            android:id="@+id/heading_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_bold"
            android:text="Photos"
            android:layout_marginLeft="@dimen/_16sdp"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@+id/info1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/subHeading_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:text="The main photo is how you appear to others on the swipe view."
            android:layout_marginLeft="@dimen/_16sdp"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/heading_photo"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/photo_list_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/subHeading_photo"
            app:justifyContent="space_between"
            app:alignItems="center"
            android:layout_marginTop="@dimen/_16sdp"
            android:paddingLeft="@dimen/_14sdp"
            android:paddingRight="@dimen/_16sdp"
            app:flow_horizontalGap="@dimen/_32sdp"
            app:alignContent="center"
            tools:ignore="MissingConstraints">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="300dp"
                android:id="@+id/main_img"
                android:layout_height="@dimen/_315sdp"
                android:background="@drawable/light_border_image"
                android:scaleType="centerCrop"

                android:src="@drawable/girl_4"
                app:layout_flexShrink="60"
                app:shapeAppearanceOverlay="@style/RoundedImageViewRounded"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_height="match_parent">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:id="@+id/img_1"
                    android:src="@drawable/girl_2"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedImageViewSomeRounded"
                    />
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:id="@+id/img_2"
                    android:src="@drawable/girl_3"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:shapeAppearanceOverlay="@style/RoundedImageViewSomeRounded"
                    />
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:id="@+id/img_3"
                    android:src="@drawable/girl_1"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:shapeAppearanceOverlay="@style/RoundedImageViewSomeRounded"
                    />
            </LinearLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <LinearLayout
            android:id="@+id/about_me_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/photo_list_container"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/heading_about_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_bold"
                android:text="About Me"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintTop_toBottomOf="@+id/info1"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"/>

            <TextView
                android:id="@+id/subheading_about_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/_16sdp"
                android:fontFamily="@font/source_sans_pro_regular"
                android:text="Make it easy for others to get a sense of who you are."
                android:textSize="@dimen/_10sdp"
                tools:layout_editor_absoluteX="16dp"
                app:layout_constraintTop_toBottomOf="@+id/heading_photo"
                tools:ignore="MissingConstraints"
                />

            <EditText
                android:id="@+id/about_me_id"
                android:layout_width="368dp"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@color/silver_mist_200"
                android:ems="10"
                android:fontFamily="@font/source_sans_pro_regular"
                android:gravity="left|top"
                android:hint="Share a few words about yourself, your interests, and what you're looking for in a connection..."
                android:inputType="textMultiLine"
                android:padding="@dimen/_16sdp"
                android:text="Life is really beautiful"
                android:textSize="@dimen/_10sdp">
                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/interests_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_16sdp"
            android:paddingHorizontal="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@+id/about_me_container"
            tools:ignore="MissingConstraints">
            <GridLayout
                android:columnCount="2"
                android:rowCount="1"
                app:layout_constraintTop_toBottomOf="@+id/info1"
                tools:ignore="MissingConstraints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/heading_interests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:text="I'm interested with"
                    android:layout_columnWeight="1"
                    android:textSize="@dimen/_14sdp"

                    />
                <TextView
                    android:id="@+id/add_interest"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:padding="@dimen/_4sdp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:background="@drawable/rounded_corner_background"
                    android:text="Update"

                    android:textSize="@dimen/_10sdp"
                    />
            </GridLayout>
            <com.google.android.material.chip.ChipGroup
                app:chipSpacingVertical="@dimen/_4sdp"
                app:chipSpacingHorizontal="@dimen/_4sdp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/interestChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@+id/interests_container"
            tools:ignore="MissingConstraints">
            <GridLayout
                android:columnCount="2"
                android:rowCount="1"
                app:layout_constraintTop_toBottomOf="@+id/info1"
                tools:ignore="MissingConstraints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/heading_my_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:text="My Basics"
                    android:layout_columnWeight="1"
                    android:textSize="@dimen/_14sdp"

                    />
                <TextView
                    android:id="@+id/add_basic"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:background="@drawable/rounded_corner_background"
                    android:text="Update"
                    android:textSize="@dimen/_10sdp"
                    android:padding="@dimen/_4sdp"
                    />
            </GridLayout>

            <com.google.android.material.chip.ChipGroup
                app:chipSpacingVertical="@dimen/_4sdp"
                app:chipSpacingHorizontal="@dimen/_4sdp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/basicsChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/my_lifeStyle_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@+id/my_details_container"
            tools:ignore="MissingConstraints">
            <GridLayout
                android:columnCount="2"
                android:rowCount="1"
                app:layout_constraintTop_toBottomOf="@+id/info1"
                tools:ignore="MissingConstraints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/heading_my_lifeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:text="My Lifestyles"
                    android:layout_columnWeight="1"
                    android:textSize="@dimen/_14sdp"

                    />
                <TextView
                    android:id="@+id/add_lifeStyle"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:background="@drawable/rounded_corner_background"
                    android:text="Update"

                    android:textSize="@dimen/_10sdp"
                    android:padding="@dimen/_4sdp"
                    />
            </GridLayout>

            <com.google.android.material.chip.ChipGroup
                app:chipSpacingVertical="@dimen/_4sdp"
                app:chipSpacingHorizontal="@dimen/_4sdp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/lifeStylesChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--            <LinearLayout-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="horizontal">-->
            <!--                <androidx.recyclerview.widget.RecyclerView-->
            <!--                    android:id="@+id/lifeStyleRecyclerView"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:orientation="horizontal"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    app:layout_constraintTop_toBottomOf="@id/heading_my_details"-->
            <!--                    android:layout_marginLeft="@dimen/_16sdp"-->
            <!--                    android:layout_marginTop="@dimen/_8sdp"-->
            <!--                    android:layout_marginRight="@dimen/_16sdp"-->
            <!--                    android:layout_marginBottom="@dimen/_8sdp"/>-->
            <!--            </LinearLayout>-->
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
