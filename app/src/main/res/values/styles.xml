<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <style name="PrimaryPurpleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_purple_700</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
    </style>

    <style name="PrimaryLightPurpleButton" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_purple_700</item>
        <item name="android:backgroundTint">@color/light_purple_200</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_75sdp</item>
        <item name="fontFamily">@font/source_sans_pro_semibold</item>
    </style>


    <style name="PrimaryLabelText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/slate_blue_500</item>
        <item name="fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="PrimaryPurpleButton">
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/primary_purple_700</item>
        <item name="fontFamily">@font/source_sans_pro_semibold</item>
    </style>

    <style name="PrimaryEditTextLayout">
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RoundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_25sdp</item>
    </style>

    <style name="RoundedImageViewSomeRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_12sdp</item>
    </style>

    <style name="RoundedItemTextView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_8sdp</item>
    </style>

    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="InterestChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Add any custom styling for the chip here -->
        <item name="chipBackgroundColor">@color/slate_blue_500</item>
    </style>

    <style name="BasicChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Add any custom styling for the chip here -->
        <item name="chipBackgroundColor">@color/red_500</item>
    </style>

    <style name="LifestyleChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Add any custom styling for the chip here -->
        <item name="chipBackgroundColor">@color/quantum_cyan600</item>
    </style>

</resources>